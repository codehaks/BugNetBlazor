@page "/bugs/details"
@inject IBugService BugService
@inject NavigationManager NavigationManager
@attribute [StreamRendering]

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Bug</h4>
    <hr />
    @if (bug is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@bug.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@bug.Description</dd>
            <dt class="col-sm-2">IsDone</dt>
            <dd class="col-sm-10">@bug.IsDone</dd>
        </dl>
        <div>
            <a href="@($"/bugs/edit?id={bug.Id}")">Edit</a> |
            <a href="@($"/")">Back to List</a>
        </div>
    }
</div>

@code {
    Bug? bug;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        bug = await BugService.FindByIdAsync(Id);

        if (bug is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
